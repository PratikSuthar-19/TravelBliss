 </div>

 <div class="filter">
   <div>
    <i class="fa-solid fa-sailboat"></i>
   </div>
   <p>Sailboat</p>
 </div>



  <div class="tax_toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>

 </div>
  

  <!-- .toLocaleString("en-IN") -->
<div class="row row-cols-lg-3 mt-3">
  <% for(let listing of  allListing){%>
    <a href="/listings/<%=listing._id%>" class="listing-link">  
      <div class="card" >
        <img src="<%=listing.image.url%>" class="card-img-top" alt="..." style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text"><b><%=listing.title%></b></p>
          <p class="card-text"> &#8377; <%=listing.price.toLocaleString("en-IN")%>/night
                <i class="gst"> &nbsp; &nbsp; +18% GST</i>
           </p>
        </div>
      </div></a>
    <!-- <div class="card" >
      <img src="<%=listing.image%>" class="card-img-top" alt="..." style="height: 20rem;">
      <div class="card-body">
        <p class="card-text"><b><%=listing.title%></b></p>
        <p class="card-text"> &#8377; <%=listing.price%>/night</p>
      </div>
    </div> -->
    <%}%>
</div>
    
<script>
  let taxSwitch = document.querySelector("#flexSwitchCheckDefault");
 
      taxSwitch.addEventListener("click" , ()=>{
        let gstText = document.getElementsByClassName("gst");
        console.log(gstText);

        for(gst of gstText){
             if(gst.style.display != "inline"){
              gst.style.display= "inline";
             }
             else{
              gst.style.display= "none";
             }
        }
        
          // console.log("clicked");
      })
</script>

</body>



