<% layout("/layouts/boilerplate") %>
  <style>
    .filters{
      display: flex;
      flex-direction: row;
      align-items: center;
     
    }
    .filter{
      text-align: center;
      margin-right: 2rem;
      margin-top: 1.5rem;
      opacity: 0.7;
    }
    .filter:hover{
      opacity: 1;
    }
    .filter p{
      font-size: 0.8rem;
    }
    .gst{
      display: none;
    }
    .tax_toggle{
      border: 1px solid black;
      border-radius: 10px;
      height: 3.5rem;
      padding: 1rem;
      margin-left: 3rem;
    }
    
    @media only screen and (max-width: 1024px) {
      .filters {
          display: none; /* Hide the div on mobile screens */
       }
}  
    
  </style>



<body>
 
  
    <!-- <h3> All Listings</h3> -->

 <div class="filters ">

  <div class="filter">
